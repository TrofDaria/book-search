<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/purple_500</item>
    </style>

    <!--    Buttons Related Styles-->

    <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_button</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAppearance">
            @style/TextAppearance.RobotoRegular.Black_87.Size_16
        </item>
        <item name="buttonTint">@android:color/black</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>


    <!--    TextAppearances-->

    <style name="TextAppearance" parent="TextAppearance.AppCompat" />

    <!--    TextAppearances's Fonts-->

    <style name="TextAppearance.RobotoRegular">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.RobotoMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!--    TextAppearances's Colors-->

    <style name="TextAppearance.RobotoRegular.Black_87">
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="TextAppearance.RobotoRegular.Black_60">
        <item name="android:textColor">@color/black_60</item>
    </style>

    <style name="TextAppearance.RobotoMedium.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.RobotoMedium.Black_38">
        <item name="android:textColor">@color/black_38</item>
    </style>

    <!--    TextAppearances's Sizes-->

    <style name="TextAppearance.RobotoRegular.Black_87.Size_16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.RobotoRegular.Black_60.Size_14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.RobotoMedium.White.Size_20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.RobotoMedium.Black_38.Size_20">
        <item name="android:textSize">20sp</item>
    </style>

</resources>